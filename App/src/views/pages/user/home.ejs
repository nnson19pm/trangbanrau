<!-- Blog Section Begin -->
<section class="from-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title from-blog__title">
                    <h2>Bài Viết Gần Đây</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <% recentBlog.forEach((blog) => { %>
   
                <%  const date =  blog.updatedAt;
                    const dateFormat = date.toISOString().slice(0, 10);
                    const timeFormat = date.toISOString().slice(11, 19);
                    const formatDateTime = date.toLocaleDateString('vi-VN', {
                        day: 'numeric',
                        month: 'numeric',
                        year: 'numeric',
                        hour: 'numeric',
                        minute: 'numeric',
                        second: 'numeric'
                    });

                %>
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic" style="max-height: 260px; overflow: hidden;">
                            <img src="<%= blog.thumbnail %>" style="max-width: 360px;" alt="">
                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i> <%= blog.updatedAt.toLocaleString()%></li>
                                <!-- <li><i class="fa fa-comment-o"></i> <%= %></li>
                                <li><i class="fa fa-comment-o"></i> <%= %></li> -->
                            </ul>
                            <h5><a href="/blog/<%= blog.slug %>"><%= blog.title %></a></h5>
                            <p></p>
                        </div>
                    </div>
                </div>
            <% }); %> 
            
        </div>
    </div>
</section>

