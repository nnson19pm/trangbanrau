<title>FootStore - Trang Chủ</title>
<%- include("./partials/layout-home") -%>
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all">
                        <i class="fa fa-bars"></i>
                        <span>All departments</span>
                    </div>

                    <ul class="ul-home">
                        <% for (let i = 0; i < productCategories.length; i++){ %>
                            <li><a href="/category/<%-productCategories[i]?.slug%>"><%=productCategories[i]?.name%></a></li>
                        <% } %>
                    </ul>
                </div>
            </div>

            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form method="GET" action="/collections/search">
                            

                            <input type="text" name="kw" placeholder="Nhập sản phẩm cần tìm?" autocomplete="off" />
                            <button type="submit" class="site-btn">Tìm Kiếm</button>
                        </form>
                    </div>

                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+65 11.188.888</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>

                <div class="product__discount ">
					<div class="row">
						<div class="product__discount__slider owl-carousel">
							<% for (let i = 0; i < discountProducts.length; i++){ let discountProduct = discountProducts[i]; %>
							<div class="col-lg-4">
								<div class="product__discount__item">
									<div class="product__discount__item__pic set-bg" data-setbg="<%=discountProduct?.thumbnails%>">
										<div class="product__discount__percent">-<%=discountProduct?.discount%>%</div>
										<ul class="product__item__pic__hover">
											<li>
												<a href="#"><i class="fa fa-retweet"></i></a>
											</li>
											<li>
												<a style="cursor: pointer" onclick="addToCart(<%= discountProduct?.id %>)"><i class="fa fa-shopping-cart"></i></a>
											</li>
										</ul>
									</div>

									<div class="product__discount__item__text">
										<span><%=discountProduct?.ProductCategory?.name%></span>
										<h5><a href="/product/<%=discountProduct?.id%>"><%=discountProduct?.name%></a></h5>
										<div class="product__item__price">
											<%=(discountProduct?.price * (100 - discountProduct?.discount)/ 100).toLocaleString('it-IT', {style : 'currency', currency : 'VND'}) %> đ
											<span><%=discountProduct?.price.toLocaleString('it-IT', {style : 'currency', currency : 'VND'})%></span>
										</div>
									</div>
								</div>
							</div>

							<% } %>
						</div>
					</div>
				</div>
            </div>
        </div>
    </div>
</section>
<!-- Categories Section Begin -->
