<!-- @format -->

<%- include("./partials/layout-top") -%>

<section class="blog-details-hero set-bg" data-setbg="/images/breadcrumb.jpg">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="blog__details__hero__text">
					<h2><%=blog?.title%></h2>

					<ul>
						<li>Đăng bởi <%=blog?.User?.full_name%></li>
						<li><%=blog?.updatedAt.toLocaleString()%></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Blog Details Hero End -->

<!-- Blog Details Section Begin -->
<section class="blog-details spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-4 col-md-5 order-md-1 order-2">
				<div class="blog__sidebar">
					<div class="blog__sidebar__search">
						<form action="#">
							<input type="text" placeholder="Search..." />
							<button type="submit"><span class="icon_search"></span></button>
						</form>
					</div>

					<div class="blog__sidebar__item">
						<h4>Danh mục</h4>

						<ul>
							<li><a href="/blogs">Tất cả</a></li>

							<% for (let i =0; i < blogCategories.length;i++){ %>
							<li><a href="/blog-cate/<%=blogCategories[i]?.slug%>"><%=blogCategories[i]?.name%></a></li>
							<% } %>
						</ul>
					</div>

					<div class="blog__sidebar__item">
						<h4>Blog gần đây</h4>

						<div class="blog__sidebar__recent">
							<% for (let i =0; i < recentBlogs.length;i++){ %>
							<a href="/blog/<%=recentBlogs[i]?.slug%>" class="blog__sidebar__recent__item">
								<!-- <div class="blog__sidebar__recent__item__pic">
									<img src="img/blog/sidebar/sr-1.jpg" alt="" />
								</div> -->
								<div class="blog__sidebar__recent__item__text">
									<h6><%=recentBlogs[i]?.title%></h6>
									<span><%=recentBlogs[i]?.createdAt.toLocaleString()%></span>
								</div>
							</a>
							<% } %>
						</div>
					</div>
				</div>
			</div>

			<div class="col-lg-8 col-md-7 order-md-1 order-1">
				<div class="blog__details__text">
					<!-- <img src="img/blog/details/details-pic.jpg" alt="" /> -->

					<%-blog?.content%>
				</div>

				<div class="blog__details__content">
					<div class="row">
						<div class="col-lg-6">
							<div class="blog__details__author">
								<div class="blog__details__author__pic">
									<img src="https://picsum.photos/200" alt="" />
								</div>

								<div class="blog__details__author__text">
									<h6><%=blog?.User?.full_name%></h6>
									<span><%=blog?.User?.roleId ? 'Admin' : 'Staff'%></span>
								</div>
							</div>
						</div>

						<div class="col-lg-6">
							<div class="blog__details__widget">
								<ul>
									<li><span>Danh mục:</span> <a href="/cate_blog/<%=blog?.BlogCategory?.slug%>"><%=blog?.BlogCategory?.name%></a></li>
									<!-- <li><span>Tags:</span> All, Trending, Cooking, Healthy Food, Life Style</li> -->
								</ul>

								
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Blog Details Section End -->

<!-- Related Blog Section Begin -->
<section class="related-blog spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title related-blog-title">
					<h2>Blog Tương Tự</h2>
				</div>
			</div>
		</div>

		<div class="row">
			<% for(let i =0; i < relatedBlog.length;i++){ const blog = relatedBlog[i]%>
			<div class="col-lg-4 col-md-4 col-sm-6">
				<div class="blog__item">
					<div class="blog__item__pic">
						<img src="<%=blog?.thumbnail%>" alt="" />
					</div>

					<div class="blog__item__text">
						<ul>
							<li><i class="fa fa-calendar-o"></i> <%=blog?.updatedAt.toLocaleString()%></li>
							<!-- <li><i class="fa fa-comment-o"></i> 5</li> -->
						</ul>

						<h5><a href="/blog/<%=blog?.slug%>"><%=blog?.title%></a></h5>

						<p></p>
					</div>
				</div>
			</div>
			<% } %>
		</div>
	</div>
</section>

<%- include("./partials/layout-bot") -%>
